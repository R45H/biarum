mixin teacher(data)
	.teacher(class= attributes.class)
		.teacher__img-wrap
			.teacher__img(style='background-image: url(' + data.img + ');')

		.teacher__text-wrap
			.teacher__desc= data.desc

			div
				a.link.teacher__name(href= data.link)= data.name
			div
				a.link.teacher__status(href= data.link)= data.status